<body>
    <div class="container">
        <form id="edit_form" action="/mainpage/profile_change" method="post">
        
            <h1>Edit Profile</h1>
            <p>Please fill in this form to edit your account.</p>
            

            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" id="username" required>
            <label for="username"><b>New Username</b></label>
            <input type="text" placeholder="Enter New Username(It can stay the same)"  id="new_username" required>

            <label for="psw"><b>New Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" id="password"
                pattern="(?=.*\d)(?=.*[A-Z])(?=.*[!@#$%^&*()_+\-=\[\]{};':\\|,.<>\/?]).{8,}"
                title="Must contain at least one number, one uppercase letter,a symbol(eg #$*&@) and at least 8 or more characters"
                required>

            <label for="psw-repeat"><b>Repeat new Password</b></label>
            <input type="password" placeholder="Repeat Password" name="psw_repeat" id="psw_repeat" required>
            
            
            <button type="submit" id="submit_btn" >Submit</button>
        </form>    
    </div>
    

    

</body>



<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js">
    let passwordElement = document.getElementById("password");
    let passwordRepeat = document.getElementById("psw_repeat");

    function validatePassword(){
        if(passwordElement.value != passwordRepeat.value) {
            passwordRepeat.setCustomValidity("Passwords Don't Match");
        } else {
            passwordRepeat.setCustomValidity('');
        }
    }

    passwordElement.onchange = validatePassword;
    passwordRepeat.onkeyup = validatePassword;


